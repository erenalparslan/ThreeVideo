<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:argType="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:id="@+id/main_land">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            app:show_shuffle_button="true"
            argType:ignore="MissingConstraints"
            argType:resize_mode="fixed_width"
            argType:show_buffering="when_playing">

        </com.google.android.exoplayer2.ui.StyledPlayerView>

        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/playerView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            app:layout_constraintTop_toTopOf="parent"
            app:show_shuffle_button="true"
            argType:ignore="MissingConstraints"
            argType:layout_editor_absoluteX="195dp"
            argType:resize_mode="fixed_width"
            argType:show_buffering="when_playing" />


    </androidx.appcompat.widget.LinearLayoutCompat>



    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/playerView3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"

        app:show_shuffle_button="true"
        argType:ignore="MissingConstraints"

        argType:resize_mode="fixed_width"
        argType:show_buffering="when_playing" />

</androidx.appcompat.widget.LinearLayoutCompat>

